<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="checkUpdateDialogStyle" parent="AlertDialog.AppCompat">
        <!-- 边框 -->
        <item name="android:windowFrame">@android:color/transparent</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--背景样式-->
        <item name="android:windowBackground">@drawable/shape_dialog_bg</item>
        <!-- 点击空白消失 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <!--全屏-->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@style/dialogAnim</item>
    </style>

    <style name="dialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>
</resources>